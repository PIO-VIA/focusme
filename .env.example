# Configuration de l'application
APP_NAME=Focus API
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api

# Base de données MySQL
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/focus_db
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=focus_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (SMTP)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@focusapp.com
MAIL_FROM_NAME=Focus App
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=True
MAIL_SSL=False
USE_CREDENTIALS=True

# URLs Frontend (pour les liens dans les emails)
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFY_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password

# Configuration CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:19006"]

# Admin par défaut (créé au premier démarrage si n'existe pas)
ADMIN_EMAIL=admin@focusapp.com
ADMIN_PASSWORD=AdminSecure123!
ADMIN_USERNAME=admin

# Configuration des challenges
CHALLENGE_DURATION_DAYS=7
REMINDER_TIME=09:00

# Limite par défaut (en minutes)
DEFAULT_DAILY_LIMIT=120
